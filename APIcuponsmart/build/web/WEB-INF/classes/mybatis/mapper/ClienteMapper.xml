<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cliente">
    <insert id="agregarCliente" parameterType="modelo.pojo.Cliente">
        INSERT INTO cliente(nombre,apellidoPaterno,apellidoMaterno,telefono,correo,idUbicacion,contrase単a,fechaNacimiento) 
        VALUES(#{nombre},#{apellidoPaterno},#{apellidoMaterno},#{telefono},#{correo},#{idUbicacion},#{contrase単a},#{fechaNacimiento}) 
    </insert>
    
    <select id="verificarCorreo" resultType="modelo.pojo.Cliente" parameterType="String" >
        SELECT * FROM cliente WHERE correo = #{correo}
    </select>
    
    <select id="clientePorId" resultType="modelo.pojo.Cliente" parameterType="int" >
        SELECT * FROM cliente WHERE idCliente = #{idCliente}
    </select>
    
    <update id="editarCliente" parameterType="map">
        UPDATE cliente SET nombre = #{nombre}, apellidoPaterno = #{apellidoPaterno}, apellidoMaterno = #{apellidoMaterno}, telefono = #{telefono}, idUbicacion =#{idUbicacion},contrase単a = #{contrase単a}, fechaNacimiento = #{fechaNacimiento}
        WHERE idCliente = #{idCliente}
    </update>
</mapper>